                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-phone-alt fa-x"></i></span>
                    </div>
             <input type="text" name="phone"  placeholder="Phone " 
             class="form-control">
                </div>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-lock fa-x"></i></span>
                    </div>
             <input type="text" name="pass"  placeholder="Password" 
             class="form-control">
                </div>

