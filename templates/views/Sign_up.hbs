</head>
<body>
    {{>navbar}}
<div class="contaniner mt-3">
    <div class="row">
        <div class="col-lg-6 bg-light m-auto">
            <form action="/sign_up" method="POST">

                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-user fa-x"></i></span>
                    </div>
             <input type="text" name="fname"  placeholder="Full Name" 
             class="form-control">
                </div>

                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-envelope fa-x"></i></span>
                    </div>
             <input type="text" name="email"  placeholder="Email_ Id" 
             class="form-control">
                </div>
